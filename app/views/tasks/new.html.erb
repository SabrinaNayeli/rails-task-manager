<h1>Create a new task</h1>

<%= form_for @task do |f| %>
  <%= f.label :title, "Enter a task"%>
  <%= f.text_field :title %>

  <%= f.label :details, "Enter details" %>
  <%= f.text_field :details %>

  <%= label_tag(:completed, "Completed") %>
  <%= check_box_tag(:completed) %>

  <%= f.submit "Create" %>

<% end %>


<p><%= link_to "Back to the TO-DO List", tasks_path %></p>
