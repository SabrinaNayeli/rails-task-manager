<h1>Edit a task</h1>

<%= form_for @task do |f| %>
  <%= f.label :title, "Enter a task"%>
  <%= f.text_field :title %>

  <%= f.label :details, "Enter details" %>
  <%= f.text_field :details %>

  <%= label_tag(:complete, "Completed") %>
  <%= check_box_tag(:complete) %>

  <%= f.submit "Edit" %>

<% end %>


<%= link_to "Back to the TO-DO List", tasks_path %>
