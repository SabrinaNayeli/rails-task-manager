<h1>TO-DO List</h1>

<% @tasks.each do |task| %>
<h2><%= task.title %></h2>
<p><%= task.details %></p>
<p><%= task.completed %></p>
<%= link_to "See", task_path(task) %>
<%= link_to "Edit", edit_task_path(task) %>

<%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
<p><%= link_to "+ Add a new task", new_task_path %></p>
